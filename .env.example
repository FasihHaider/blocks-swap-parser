# PostgreSQL Database Configuration
# Copy this file to .env and update with your actual database credentials

# Database host
# Use 'host.docker.internal' if Hasura (running in Docker) needs to access Postgres on your host machine
# Use 'localhost' if running everything locally
# Use IP address or hostname for remote databases
ENVIO_PG_HOST=localhost

# Database port
ENVIO_PG_PORT=5432

# Database user
ENVIO_PG_USER=postgres

# Database password
# You can also use ENVIO_POSTGRES_PASSWORD instead
ENVIO_PG_PASSWORD=your_password_here

# Database name
ENVIO_PG_DATABASE=envio-dev

# Public schema
ENVIO_PG_PUBLIC_SCHEMA=public

# SSL mode (false for local development, 'require' | 'allow' | 'prefer' | 'verify-full' for production)
ENVIO_PG_SSL_MODE=false

# Hasura GraphQL Engine Configuration
HASURA_EXTERNAL_PORT=8080
HASURA_GRAPHQL_ADMIN_SECRET=testing
HASURA_GRAPHQL_ENABLE_CONSOLE=true

# RPC URL for blockchain queries (optional, has fallback in code)
RPC_URL=https://base-mainnet.g.alchemy.com/v2/sRgqUZi3qU038g6Yr5_1S
